---
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
import PlayerScene from "../components/PlayerScene.astro";
---

<Layout>
  <main class="flex] w-[100vw] relative bg-[url('/assets/bigHill.png')] bg-no-repeat bg-bottom object-top">
    <!-- <img src="/assets/bigHill.png" alt="A big hill" class="scale-[5] absolute z-0 bottom-0" /> -->
    <img src="/assets/skyGradientPiece.png" alt="A piece of the skybox" class="absolute top-20 z-10 opacity-40" />
    <img src="/assets/sun.png" alt="The Sun" class="w-auto left-[-10%] object-cover absolute -top-16 z-0 scale-50" />
    <div class="grid min-w-full" style={{ gridTemplateColumns: "auto" }}>
      <PlayerScene />
      <div class="min-w-full flex z-[99] justify-center p-4">
        <Projects />
      </div>
    </div>
  </main>
</Layout>
