---
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
import PlayerScene from "../components/PlayerScene.astro";

---

<Layout>
  <main class="flex h-[100vh] bg-[url('/assets/bigHill.png')] bg-no-repeat bg-fixed bg-[center_top_18rem]">
    <img src="/assets/skyGradientPiece.png" alt="A piece of the skybox" class="w-full object-cover absolute top-0 z-10 opacity-40" />
    <img src="/assets/sun.png" alt="The Sun" class="w-auto left-[30%] object-cover absolute top-0 z-0" />
    <PlayerScene />
    <div class="w-full p-20 flex z-[99]">
      <Projects />
    </div>
  </main>
</Layout>
