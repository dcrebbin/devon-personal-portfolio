---
import { PROJECTS } from "../constants";
import Project from "./Project.astro";
import Highlights from "./Highlights.astro";
import Timeline from "./Timeline.astro";
---

<div class="w-full flex flex-col items-start bg-white/60 backdrop-blur-sm rounded-3xl drop-shadow-lg h-fit p-4 lg:mt-14 mt-64 my-8">
  <h2 class="text-3xl">My Projects</h2>
  <div class="flex flex-row w-full gap-2">
    <Timeline />
    <div class="p-2 lg:p-4 md:pr-10 2xl:pr-19 overflow-y-scroll flex flex-col items-center h-[75vh] w-full">
      <Highlights />
      <hr class="p-2 w-full" />
      <h2 class="text-2xl" id="timeline">Project Timeline</h2>
      {
        PROJECTS.map((project: any, index: number) => {
          return <Project index={index} project={project} />;
        })
      }
    </div>
  </div>
</div>
